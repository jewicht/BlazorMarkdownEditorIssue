@inject ISnackbar Snackbar

@page "/description"

<PageTitle>Description Editor</PageTitle>

<MarkdownEditor @ref=MarkdownEditor
                @bind-Value=MarkdownString
                @bind-ValueHTML=MarkdownHTML
                HideIcons="HiddenIcons"
                SpellChecker=false />

<MudPaper Class="ma-2 pt-2 pb-2 pl-6 pr-6">
    <MudText Typo="Typo.h6">Preview</MudText>
    @((MarkupString)MarkdownHTML)
</MudPaper>
